# Database Configuration
POSTGRES_PASSWORD=meldenit_password

# Security
SECRET_KEY=your-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS
ALLOWED_ORIGINS=["*"]

# Snipe-IT Integration
SNIPEIT_BASE_URL=https://assit.meldencloud.com
SNIPEIT_API_TOKEN=your-snipeit-api-token

# Agent Configuration
AGENT_HEARTBEAT_INTERVAL=15
AGENT_DELTA_SYNC_INTERVAL=360
AGENT_FULL_SYNC_TIME=03:00
AGENT_MAX_RETRY_ATTEMPTS=3
AGENT_RETRY_DELAY_SECONDS=30

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Update Management
UPDATE_CHECK_ENABLED=true
LATEST_VERSION=1.0.0
UPDATE_DOWNLOAD_URL=https://assit.meldencloud.com/downloads/

# SSL Configuration
DOMAIN_NAME=assit.meldencloud.com
SSL_EMAIL=admin@meldencloud.com

# Redis Configuration
REDIS_URL=redis://redis:6379
